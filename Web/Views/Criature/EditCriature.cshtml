@model Services.Dtos.CriatureModel

@{
    ViewData["Title"] = "Editar Criatura";
}
<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700&display=swap" rel="stylesheet" />
<link href="~/css/editar.css" rel="stylesheet" />

<h2>Editar Criatura</h2>

<form asp-action="Edit" method="post" class="creature-form">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipo"></label>
        <input asp-for="Tipo" class="form-control" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Habitat"></label>
        <input asp-for="Habitat" class="form-control" />
        <span asp-validation-for="Habitat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Alimentacion"></label>
        <input asp-for="Alimentacion" class="form-control" />
        <span asp-validation-for="Alimentacion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagenUrl"></label>
        <input asp-for="ImagenUrl" type="url" class="form-control" />
        <span asp-validation-for="ImagenUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nivel de Peligro</label>
        <div class="star-rating">
            @for (int i = 5; i >= 1; i--)
            {
                <input type="radio" id="estrella-@i" name="niveldepeligro" value="@i" @(Model.niveldepeligro == i ? "checked" : "") />
                <label for="estrella-@i" title="@i estrellas">&#9733;</label>
            }
            <input type="radio" id="estrella-0" name="niveldepeligro" value="0" @(Model.niveldepeligro == 0 ? "checked" : "") />
            <label for="estrella-0" title="0 estrellas">&#9734;</label>
        </div>
        <span asp-validation-for="niveldepeligro" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Preacaucion"></label>
        <input asp-for="Preacaucion" class="form-control" />
        <span asp-validation-for="Preacaucion" class="text-danger"></span>
    </div>

    <div class="form-buttons">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
