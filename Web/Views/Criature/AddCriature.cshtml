@using Services.Dtos;
@{
    ViewData["Title"] = "Add Criature";
}
@model CriatureModel;

<style>
    .star-rating {
        direction: rtl;
        unicode-bidi: bidi-override;
        display: inline-flex;
        vertical-align: middle;
    }

        .star-rating input[type="radio"] {
            display: none;
        }

        .star-rating label {
            font-size: 1.8rem;
            color: #ddd;
            cursor: pointer;
        }

            .star-rating input[type="radio"]:checked ~ label,
            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: gold;
            }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
    }
</style>

<div class="form-container">
    <h2 class="text-center mb-4">Agregar Criatura</h2>

    <form asp-controller="Criature" asp-action="AddCriature" method="post">
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Nombre" placeholder="Nombre" required />
        </div>
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Tipo" placeholder="Tipo" required />
        </div>
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Habitat" placeholder="Hábitat" required />
        </div>
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Alimentacion" placeholder="Alimentación" required />
        </div>
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Descripcion" placeholder="Descripción" required />
        </div>
        <div class="form-group mb-3">
            <input type="url" class="form-control" asp-for="ImagenUrl" placeholder="Imagen URL" />
        </div>

        <div class="form-group mb-3 d-flex align-items-center">
            <label class="me-2 mb-0">Nivel de Peligro:</label>
            <div class="star-rating">
                @for (int i = 5; i >= 1; i--)
                {
                    <input type="radio" id="estrella-@i" name="niveldepeligro" value="@i" />
                    <label for="estrella-@i" title="@i estrellas">&#9733;</label>
                }
                <input type="radio" id="estrella-0" name="niveldepeligro" value="0" checked />
                <label for="estrella-0" title="0 estrellas">&#9734;</label>
            </div>
        </div>

        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Preacaucion" placeholder="Precaución" />
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Crear</button>
        </div>
    </form>
</div>
