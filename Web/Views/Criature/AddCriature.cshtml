@using Services.Dtos;
@{
    ViewData["Title"] = "Add Criature";
}
@model CriatureModel;

<link href="~/css/addcriature.css" rel="stylesheet" />

<div class="form-container">
    <h2 class="text-center mb-4">Agregar Criatura</h2>

    <form asp-controller="Criature" asp-action="AddCriature" method="post">
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Nombre" placeholder="Nombre de la Criatura" required />
        </div>
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Tipo" placeholder="Tipo Mitológico (Ej: Fuego, Sombra...)" required />
        </div>
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Habitat" placeholder="Hábitat Legendario" required />
        </div>
        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Alimentacion" placeholder="Alimentación" required />
        </div>
        <div class="form-group mb-3">
            <textarea class="form-control" asp-for="Descripcion" placeholder="Descripción legendaria..." rows="6" required></textarea>
        </div>
        <div class="form-group mb-3">
            <input type="url" class="form-control" asp-for="ImagenUrl" placeholder="URL de Imagen Épica" />
        </div>

        <div class="form-group mb-3 d-flex align-items-center">
            <label class="me-2 mb-0">Nivel de Peligro:</label>
            <div class="star-rating">
                @for (int i = 5; i >= 1; i--)
                {
                    <input type="radio" id="estrella-@i" name="niveldepeligro" value="@i" />
                    <label for="estrella-@i" title="@i estrellas">&#9733;</label>
                }
                <input type="radio" id="estrella-0" name="niveldepeligro" value="0" checked />
                <label for="estrella-0" title="0 estrellas">&#9734;</label>
            </div>
        </div>

        <div class="form-group mb-3">
            <input type="text" class="form-control" asp-for="Preacaucion" placeholder="Precauciones ante su presencia..." />
        </div>

        <button type="submit" class="btn-magico">🧙‍♂️ Invocar Criatura</button>

    </form>
</div>
